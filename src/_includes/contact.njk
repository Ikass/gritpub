{% extends 'default.njk' %}

{% block body %}

<div class="px-4 py-16 overflow-hidden sm:px-6 lg:px-8 lg:py-24">
  <div class="relative max-w-xl mx-auto">

    <div class="text-center">
      <h2 class="text-3xl font-extrabold tracking-tight text-zinc-800 sm:text-4xl">
        {{ title }}
      </h2>
      <p class="mt-4 text-lg leading-6 text-zinc-600">
        Get in touch using the contact form if you are interested in my web development services or have a question.
      </p>
    </div>
    <div class="mt-12">
      <form
        action="https://formspree.io/f/mayvedbg"
        method="POST"
        class="grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:gap-x-8"
      >
        <div>
          <label
            for="first-name"
            class="block text-sm font-medium text-zinc-700">First name</label>
          <div class="mt-1">
            <input
              type="text"
              name="first-name"
              id="first-name"
              autocomplete="given-name"
              class="block w-full px-4 py-3 rounded-md shadow-sm border-zinc-300 focus:ring-violet-500 focus:border-violet-500"
            />
          </div>
        </div>
        <div>
          <label for="last-name" class="block text-sm font-medium text-zinc-700"
            >Last name</label
          >
          <div class="mt-1">
            <input
              type="text"
              name="last-name"
              id="last-name"
              autocomplete="family-name"
              class="block w-full px-4 py-3 rounded-md shadow-sm border-zinc-300 focus:ring-violet-500 focus:border-violet-500"
            />
          </div>
        </div>
        <div class="sm:col-span-2">
          <label for="email" class="block text-sm font-medium text-zinc-700"
            >Email</label
          >
          <div class="mt-1">
            <input
              id="email"
              name="email"
              type="email"
              autocomplete="email"
              class="block w-full px-4 py-3 rounded-md shadow-sm border-zinc-300 focus:ring-violet-500 focus:border-violet-500"
            />
          </div>
        </div>

        <div class="sm:col-span-2">
          <label for="message" class="block text-sm font-medium text-zinc-700"
            >Message</label
          >
          <div class="mt-1">
            <textarea
              id="message"
              name="message"
              rows="4"
              class="block w-full px-4 py-3 border rounded-md shadow-sm border-zinc-300 focus:ring-violet-500 focus:border-violet-500"
            ></textarea>
          </div>
        </div>
        <div class="sm:col-span-2">
          <button
            type="submit"
            class="inline-flex items-center justify-center w-full px-6 py-3 font-medium border border-transparent rounded-md shadow-sm text-violet-50 bg-violet-700 hover:bg-violet-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500"
          >
            Let's talk
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}
